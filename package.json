		"@taknepoidet-config/stylelint": "^2.1.1",
		"@types/node": "^20.5.9",
		"eslint": "^8.48.0",
		"eslint-config-prettier": "^9.0.0",
		"eslint-plugin-prettier": "^5.0.0",
		"eslint-plugin-vuejs-accessibility": "^2.2.0",
		"husky": "^8.0.3",
