	},
	"lint-staged": {
		"**/*.(scss|css|sass|vue)": [
			"stylelint --fix"
		],
		"**/*.(js|ts|vue)": [
			"eslint --fix"
		],
		"!**/*.*(scss|css|sass|js|ts|vue)": [
			"prettier --write"
		]
	}
